  <!-- partials head -->
  <%- include('partials/head', { title: "Pizzaria Express"}) %>
  <!-- navbar -->
  <%- include('partials/navbar')%>

  <!--active section -> hero -->
  <div class="container d-flex justify-content-center">
    <div class="card text-center shadow mt-5 pb-3 bg-white rounded" style="width: 20rem;">
      <div class="card-header">
        <h5 class="text-secondary">Cadastrar Pizza</h5>
      </div>
      <div class="card-body">
        <form action="/cardapio/cadastrar" method="POST" enctype="multipart/form-data" class="form-cadastro">
          <div class="form-group">
            <label for="nomePizza">Nome da Pizza: </label>
            <input type="text" name="nomePizza" id="nomePizza">
          </div>
          <div class="form-group">
            <label for="precoPizza">Pre√ßo da Pizza: </label>
            <input type="text" name="precoPizza" id="precoPizza">
          </div>
          <div class="form-group">
            <label for="imgPizza">Imagem da Pizza: </label>
            <input type="file" name="imgPizza" id="imgPizza">
          </div>
          <button type="submit" class="btn btn-info">Enviar</button>
        </form>
      </div>
    </div>
  </div>

    <!-- verifica se foi enviado mensagem de cadastro confirmando -->
    <!-- link para voltar pagina ver -->
    <div class="container">
      <% if(typeof(msg) !== 'undefined') { %>
      <div class="alert alert-success" role="alert">
        <%= msg %> <a href="/cardapio/ver" class="alert-link">click aqui para Voltar</a>.
      </div>
      <% } %>
    </div>  


  <!--scripts -->
  <%- include('partials/bottomPage') %>